! Global daemon
daemonize: true
syslog: daemon

! Buffer sizes
plugin_buffer_size: 10240
plugin_pipe_size: 1024000

! Listener
<% @_backend_listener.each do | key, value |-%>
<%= key %>: <%= value %>
<% end -%>

! globals
<% @_backend_globals.each do | key, value |-%>
<%= key %>: <%= value %>
<% end -%>

! Plugins
plugins: <% @_backend_inputs.each do | plugin, options |-%><%= plugin %> <% end %>

<% @_backend_inputs.each do | plugin, options |-%>
! <%= plugin %>
<% options.each do | key, value |-%>
<%= key %>: <%= value %>
<% end -%>

<% end -%>

